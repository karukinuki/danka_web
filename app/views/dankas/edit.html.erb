  <%= stylesheet_link_tag 'dankas' %>
    <main class="my-3">
      <div class="container">
        <span class="main-title h1">檀家詳細編集</span>
      </div>
      <div class="container">
        <%= form_for(@danka) do |f| %>
            <div class="form-check hide">
              <%= f.label :check,"" %>
              <%= f.check_box :check,class: "" %>
            </div>

          <div class="form-row mt-3">
            <div class="form-group col-md-4 col-lg-3 col-8">
              <%= f.label :subname,"フリガナ" %>
              <%= f.text_field :subname,class: "form-control" %>
            </div>
            <div class="form-group col-md-5 col-lg-4 col-8">
              <%= f.label :name,"施主" %>
              <%= f.text_field :name,class: "form-control" %>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-3 col-5">
              <%= f.label :postal,"郵便番号" %>
              <%= f.text_field :postal,class: "form-control" %>
            </div>
            <div class="form-group col-lg-8">
              <%= f.label :addless,"住所" %>
              <%= f.text_field :addless,class: "form-control" %>
            </div>
          </div>
            <div class="form-group">
              <%= f.label :addless2,"住所2" %>
              <%= f.text_field :addless2,class: "form-control" %>
            </div>
            <div class="form-row">
              <div class="form-group col-8 col-md-6">
                <%= f.label :tel,"電話番号" %>
                <%= f.telephone_field :tel,class: "form-control" %>
              </div>
              <div class="form-group col-8 col-md-6">
                <%= f.label :email,"メール" %>
                <%= f.email_field :email,class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :mark1,"備考1" %>
              <%= f.text_field :mark1,class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :mark2,"備考2" %>
              <%= f.text_area :mark2,class: "form-control" %>
            </div>
            <%= f.submit "　編集完了　",class: "btn btn-primary" %>
        <% end %>
      </div>
    </main>
