<!doctype html>
<html lang="ja">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="css/custom.css">
    <title>檀家名簿</title>
    </head>
    <body>
      <header>
        
      </header>
      <main>

        <div class="c-head">
          <nav class="navbar navbar-expand navbar-light bg-light m-3">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active">
                <a class="nav-link badge badge-info " href="/dankas/show">檀家名簿 <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link badge badge-info ml-2" href="/pasts/index">過去帳</a>
              </li>
            </ul>
            <div class="">
              <form class="form-inline my-1 justify-content-end">
                <input class="form-control" type="search" placeholder="Search">
                <button class="btn btn-outline-success ml-0 my-1" type="submit">Search</button>
              </form>
            </div>
          </nav>
            <div class="dropdown m-4">
              <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                並べ替え
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">あ行</a>
                <a class="dropdown-item" href="#">か行</a>
                <a class="dropdown-item" href="#">さ行</a>
              </div>
            </div>
            <span class="btn btn-warning"><%= link_to("登録","/dankas/new")%></span>

        </div>

          <div class="container-fluid c-table">
            <table class="table table-striped border">
              <thead>
                <tr class="text-nowrap">
                  <th scope="col">#</th>
                  <th scope="col">フリガナ</th>
                  <th scope="col">管理者</th>
                  <th scope="col">住所</th>
                  <th scope="col">電話</th>
                </tr>
              </thead>
              <% @dankas.each do |danka| %>
                <tbody>
                  <tr>
                    <th scope="row"><%= danka.id %></th>
                    <td><%= danka.subname %></td>
                    <td class="text-nowrap"><%= link_to(danka.name,"/dankas/#{danka.id}") %></td>
                    <td><%= danka.addless %></td>
                    <td><%= danka.tel %></td>
                  </tr>
                </tbody>
              <% end %>
            </table>
          </div>
      </main>
      <footer>

      </footer>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
  </html>
