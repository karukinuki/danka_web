<!doctype html>
<html lang="ja">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="details.css">
    <title>詳細</title>
  </head>
  <body>
    <header>

    </header>
    <main>
      <div class="container mt-3">
        <span class="main-title h1">基本情報</span>
      </div>
      <div class="container">
        <%= form_tag("/dankas/create") do %>
        <form>
          <div class="form-check d-inline-block">
            <input class="form-check-input" type="checkbox" id="check1" name="check">
            <label class="form-check-label" for="check1"></label>
          </div>
          <div class="form-row">
            <div class="form-group col-md-4 col-lg-3 col-8">
              <label for="inputsubname">フリガナ</label>
              <input type="text" class="form-control" id="inputsubname" name="subname">
            </div>
            <div class="form-group col-md-5 col-lg-4 col-8">
              <label for="inputname">施主</label>
              <input type="text" class="form-control" id="inputname" name="name">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-3 col-5">
              <label for="inputpostal">郵便番号</label>
              <input type="text" class="form-control" id="inputpostal" name="postal">
            </div>
            <div class="form-group col-lg-8">
              <label for="inputaddress">住所</label>
              <input type="text" class="form-control" id="inputaddress" name="addless">
            </div>
          </div>
          <div class="form-group">
            <label for="inputaddress1">住所2</label>
            <input type="text" class="form-control" id="inputaddress1" placeholder="旧住所など" name="addless2">
          </div>

          <div class="form-row">
            <div class="form-group col-8 col-md-6">
              <label for="inputtel">電話番号</label>
              <input type="tel" class="form-control" id="inputtel" name="tel">
            </div>
            <div class="form-group col-8 col-md-6">
              <label for="inputemail">メール</label>
              <input type="email" class="form-control" id="inputemail" name="email">
            </div>
          </div>

          <div class="form-group">
            <label for="inputAddress1">備考1</label>
            <input type="text" class="form-control" id="inputAddress1" name="mark1">
          </div>

          <div class="form-group">
            <label for="textarea1">備考2</label>
            <textarea class="form-control" id="textarea1" rows="3"  name="mark2"></textarea>
          </div>

          <button type="submit" class="btn btn-primary">　登録　</button>

        </form>
        <% end %>
      </div>
      <h1>qqq</h1>


    </main>
    <footer>
      <div class="">
        フッター
      </div>
    </footer>
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>
